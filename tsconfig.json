{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2022", "ES2018", "dom"],
        "sourceMap": false,
        "removeComments": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": true,
        "baseUrl": ".",
        "useDefineForClassFields": false,
        "declaration": false
    },
    "include": ["./src/**/*"],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}